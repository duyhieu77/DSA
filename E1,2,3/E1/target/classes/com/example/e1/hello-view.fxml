<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.e1.HelloController" style="-fx-background-color: #f0f0f0;">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="Enter Student Information" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <HBox spacing="10">
        <Label text="Name:" style="-fx-font-size: 18px;"/>
        <TextField fx:id="NameField" promptText="Enter Name" style="-fx-pref-width: 250px;"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Age:" style="-fx-font-size: 18px;"/>
        <TextField fx:id="AgeField" promptText="Enter Age" style="-fx-pref-width: 250px;"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Score:" style="-fx-font-size: 18px;"/>
        <TextField fx:id="ScoreField" promptText="Enter Score" style="-fx-pref-width: 250px;"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Save" onAction="#onSubmitButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-font-weight: bold;"/>
    </HBox>

    <HBox alignment="TOP_LEFT" spacing="10">
        <Button text="Bubble Sort" onAction="#onBubbleSortButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-font-weight: bold;"/>
        <Button text="Insertion Sort" onAction="#onInsertionSortButtonClick" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-font-weight: bold;"/>
        <Button text="Selection Sort" onAction="#onSelectionSortButtonClick" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-font-weight: bold;"/>
    </HBox>

</VBox>